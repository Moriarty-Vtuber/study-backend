datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model SystemConstants {
  id                         Int     @id @default(autoincrement())
  max_seats                  Int
  member_max_seats           Int
  min_vacancy_rate           Float
  youtube_membership_enabled Boolean
  fixed_max_seats_enabled    Boolean
}

model Seat {
  id                         Int      @id @default(autoincrement())
  seat_id                    Int
  user_id                    String
  user_display_name          String
  work_name                  String
  break_work_name            String
  entered_at                 DateTime
  until                      DateTime
  color_code1                String
  color_code2                String
  num_stars                  Int
  color_gradient_enabled     Boolean
  menu_code                  String
  state                      String
  current_state_started_at   DateTime
  current_state_until        DateTime
  cumulative_work_sec        Int
  daily_cumulative_work_sec  Int
  user_profile_image_url     String
}

model Menu {
  id   Int    @id @default(autoincrement())
  code String
  name String
}

model WorkNameTrend {
  id        Int      @id @default(autoincrement())
  ranking   Json
  ranked_at DateTime
}
